<% if description %>
  <section class="sk-api-description">
    <%= description.to_html %>
  </section>
<% end %>

<%# Functions %>
<% if !functions.empty? %>
  <section class="sk-api-functions">
    <h2> Functions </h2>
    <% functions.each do |function| %>
      <%= partial 'partials/api/function', locals: { function: function } %>
    <% end %>
  </section>
<% end %>

<%# Types %>
<% if !types.empty? %>
  <section class="sk-api-types">
    <h2> Types </h2>
    <% types.each do |type| %>
      <%= partial 'partials/api/type', locals: { type: type } %>
    <% end %>
  </section>
<% end %>

<%# Macros %>
<% if !defines.empty? %>
  <section class="sk-api-defines">
    <h2> Macros </h2>
    <% defines.each do |define| %>
      <%= partial 'partials/api/defines', locals: { define: define } %>
    <% end %>
  </section>
<% end %>
